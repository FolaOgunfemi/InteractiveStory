<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ogunfemi.folaranmi.interactivestory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.MainActivity"
            android:screenOrientation="portrait">

            <!-- must set this screen orientation for each activity individually, unless we change settings to have them all conform to either landscape or portrait -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.StoryActivity"
            android:screenOrientation="portrait"

            android:parentActivityName=".UI.MainActivity">

            <!-- must set this screen orientation for each activity individually, unless we change settings to have them all conform to either landscape or portrait -->
            ></activity>
    </application>

</manifest>